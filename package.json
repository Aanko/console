{
  "name": "halo-admin-next",
  "version": "0.0.0",
  "scripts": {
    "prepare": "husky install",
    "dev": "vite --host",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --port 5050",
    "test:unit": "vitest --environment jsdom --run",
    "test:unit:watch": "vitest --environment jsdom --watch",
    "test:unit:ui": "vitest --environment jsdom --watch --ui",
    "test:unit:coverage": "vitest run --environment jsdom --coverage",
    "test:e2e": "start-server-and-test preview http://127.0.0.1:5050/ 'cypress open'",
    "test:e2e:ci": "start-server-and-test preview http://127.0.0.1:5050/ 'cypress run'",
    "typecheck": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "story:dev": "histoire dev --port 4000",
    "story:build": "histoire build"
  },
  "dependencies": {
    "@vueuse/core": "^8.4.2",
    "pinia": "^2.0.14",
    "tailwindcss-safe-area": "^0.2.2",
    "tippy.js": "^6.3.7",
    "vue": "^3.2.33",
    "vue-router": "^4.0.15"
  },
  "devDependencies": {
    "@iconify-json/ri": "^1.1.1",
    "@rushstack/eslint-patch": "^1.1.3",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^17.0.31",
    "@vitejs/plugin-vue": "^2.3.2",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "@vitest/ui": "^0.12.3",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-rc.21",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.7",
    "c8": "^7.11.2",
    "cypress": "^9.6.1",
    "eslint": "^8.15.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^8.7.1",
    "histoire": "^0.4.5",
    "husky": "^8.0.1",
    "jsdom": "^19.0.0",
    "postcss": "^8.4.13",
    "prettier": "^2.6.2",
    "sass": "^1.51.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.24",
    "tailwindcss-themeable": "^1.3.0",
    "typescript": "~4.6.4",
    "unplugin-icons": "^0.14.3",
    "vite": "^2.9.8",
    "vite-compression-plugin": "^0.0.3",
    "vitest": "^0.12.3",
    "vue-tsc": "^0.34.11"
  }
}
